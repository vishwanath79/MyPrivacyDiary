{
    "manifest_version": 3,
    "name": "Who Can Track Me?",
    "version": "1.0",
    "description": "Analyze website trackers and get AI-powered privacy insights",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://*.vercel.app"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/logo-16.png",
        "48": "icons/logo-48.png",
        "128": "icons/logo-128.png"
      }
    },
    "icons": {
      "16": "icons/logo-16.png",
      "48": "icons/logo-48.png",
      "128": "icons/logo-128.png"
    }
  }